/* assets/css/fonts.css */
@font-face {
  font-family: 'Computer Modern Serif';
  src: url('/assets/fonts/Serif/cmunrm.woff') format('woff');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Computer Modern Serif';
  src: url('/assets/fonts/Serif/cmunbx.woff') format('woff');
  font-weight: bold;
  font-style: normal;
}

@font-face {
  font-family: 'Computer Modern Serif';
  src: url('/assets/fonts/Serif/cmunti.woff') format('woff');
  font-weight: normal;
  font-style: italic;
}

/* === Apply it to the page === */
body,
h1, h2, h3, h4, h5, h6,
p, li, blockquote, td, th {
  font-family: 'Computer Modern Serif', serif !important;
}
